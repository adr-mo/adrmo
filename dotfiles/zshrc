# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH
#
# # ~/.zshrc
export PATH=$HOME/bin:/usr/local/bin:$HOME/.rd/bin:$PATH

eval "$(starship init zsh)"

plugins=(
    git
    docker
    docker-compose
    composer
)

alias c="clear"
alias cat="bat"
alias vim="/Users/Adrien/workspace/nvim-macos/bin/nvim"
alias nvim="/Users/Adrien/workspace/nvim-macos/bin/nvim"
alias v="/Users/Adrien/workspace/nvim-macos/bin/nvim"
alias create-pr="gh pr create --web"
alias t="tmux"
alias lg="lazygit"
alias exec-phpstan="./vendor/bin/phpstan analyze --configuration=phpstan.core.neon --level=max" 
alias centreon-dev="docker exec -ti centreon-dev bash"
alias ll='ls -lah'

### MANAGED BY RANCHER DESKTOP START (DO NOT EDIT)
export PATH="/Users/Adrien/.rd/bin:$PATH"
### MANAGED BY RANCHER DESKTOP END (DO NOT EDIT)
#

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
